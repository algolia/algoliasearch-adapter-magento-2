<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog">
            <group id="search">
                <field id="algolia_search_timeout" translate="label" type="text" sortOrder="61"
                       showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Algolia Search Request Timeout</label>
                    <comment>
                        <![CDATA[
                            Number of milliseconds to allow Algolia to respond to search requests.
                        ]]>
                    </comment>
                    <depends>
                        <field id="engine">algolia</field>
                    </depends>
                </field>
            </group>
        </section>
        <section id="algoliasearch_advanced">
            <group id="search_adapter" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Search Adapter</label>
                <attribute type="expanded">1</attribute>
                <comment>
                    <![CDATA[
                            These advanced settings belong to the <code>Algolia_SearchAdapter</code> module
                      ]]>
                </comment>
                <!-- placeholder for future fields -->
            </group>
        </section>
    </system>
</config>
